<h1><%= @post.title %></h1>
<p><%= sanitize @post.body %></p>
<hr>
<% @comments.each do |comment| %>
<p>User <b><%= comment.user.nickname %></b> write: </p>
<%= comment.text %>
<hr>
<% end %>
	<%= form_for :postcomment, url: post_postcomments_path(post_id: @post.id) do |f| %>
<% if flash[:notice] %>
	<div ><%= flash[:notice] %></div>
<% end %>
	<p><%= f.label "Write your comment" %></p>
	<%= f.text_area :text, cols: 20, rows: 5 %></br>

	<p><%= f.submit "Send"%></p>
	
<% end %>